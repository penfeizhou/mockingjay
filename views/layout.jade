mixin js(src)
    script(src="#{src}")
mixin jsx(src)
    script(type="text/jsx",src="#{src}")

doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='icon',href='/favicon.ico',type="image/x-icon")
        link(rel='shortcut icon',href='/favicon.ico',type="image/x-icon")
        +js('/js/module/react.js')
        +js('/js/module/JSXTransformer.js')
    body
        block content
        block js
        script(type='text/javascript' id='__bs_script__').
            document.write("<script async src='http://HOST:3003/browser-sync/browser-sync-client.2.11.1.js'><\/script>".replace("HOST", location.hostname));